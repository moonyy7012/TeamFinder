<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mulcam.teamfinder.dao.UsersMapper">

	
	<resultMap type="User" id="userResultMap">
		<result column="user_index" property="user_index"/>
		<result column="user_id" property="user_id"/>
		<result column="user_pwd" property="user_newpwd"/>
		<result column="region" property="region"/>
		<result column="user_image" property="user_image"/>
		<result column="user_stack" property="user_stack"/>
		<result column="user_email" property="user_email"/>
	</resultMap>
	
	<select id="findUserbyId" parameterType="java.lang.String" resultMap="userResultMap">
		SELECT * FROM user_list where user_id = #{id}
	</select>
	
	<update id="editMember" parameterType="User">
 		update user_list set user_pwd = #{user_newpwd}, region = #{region}, user_image = #{user_image}, user_stack = #{user_stack}, user_email = #{user_email}, user_id = #{user_id}  
		where user_id = #{user_id}
	</update>

	<delete id="secession" parameterType="User">
		DELETE FROM user_list WHERE user_id = #{user_id}
	</delete>


</mapper>